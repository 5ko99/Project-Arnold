<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="@dimen/exercise_model_img_exercise_widht"
        android:layout_height="@dimen/exercise_model_img_exerise_height"
        android:id="@+id/img_exercise"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:src="@drawable/bedra"/>

    <TextView
        android:id="@+id/txt_exercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exercise"
        android:textSize="@dimen/exercise_model_text_size"
        android:paddingRight="0dp"
        android:paddingLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="35dp"
        android:layout_toRightOf="@+id/img_exercise"/>
</LinearLayout>
