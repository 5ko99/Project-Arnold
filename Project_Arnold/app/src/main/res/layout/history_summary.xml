<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/history_summary_img"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:src="@drawable/bedra" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/history_summary_tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hands"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/history_summary_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01.06.2016"
            android:textColor="@color/list_view_text_color"
            android:textSize="20sp"
            android:textStyle="italic"/>
    </LinearLayout>

</LinearLayout>