<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/history_summary_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/history_summary_tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hands"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of exercises:"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/list_view_text_color"
            android:textSize="20sp"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/history_summary_n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_gravity="center_horizontal"
            android:textSize="40sp"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:id="@+id/history_summary_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01.06.2016"
            android:textColor="@color/list_view_text_color"
            android:textSize="20sp"
            android:textStyle="italic"/>

    </LinearLayout>



</LinearLayout>